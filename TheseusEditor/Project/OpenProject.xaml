<UserControl x:Class="TheseusEditor.Project.OpenProject"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TheseusEditor.Project"
             mc:Ignorable="d"  Width="800"
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Background="#282323" >
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Background="Transparent">
            <ListBox Width="195" Height="250" Background="#282828" BorderBrush="#D2C8C8"/>
            <Border Width="400" Height="250" Margin="5,0,0,0"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0" >
            <Button Content="Open" Width="96" Background="#282828" Foreground="#D2C8C8" />
            <Button Content="Exit" Width="96" Margin="30,0,0,0" Background="#282828" Foreground="#D2C8C8"/>
        </StackPanel>
    </StackPanel>
</UserControl>
